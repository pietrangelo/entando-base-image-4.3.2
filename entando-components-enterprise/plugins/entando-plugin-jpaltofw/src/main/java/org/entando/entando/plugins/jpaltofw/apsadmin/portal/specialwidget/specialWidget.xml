<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    
    <package name="jpaltofw_do/Page/SpecialWidget" namespace="/do/Page/SpecialWidget" extends="core_do/Page/SpecialWidget">
        
        <action name="gokibiWidgetConfig" class="jpaltofwAltoWidgetAction" method="init">
            <result type="tiles">admin.jpaltofw.page.widget.altoWidget.config</result>
            <interceptor-ref name="entandoDefaultStack"><param name="requestAuth.requiredPermission">managePages</param></interceptor-ref>
        </action>
        
    </package>
    
    <package name="jpaltofw_do/jpaltofw/Page/SpecialWidget/AltoWidget" namespace="/do/jpaltofw/Page/SpecialWidget/AltoWidget" extends="entando-default">
        
        <global-results>
            <result name="pageTree" type="chain">
                <param name="namespace">/do/Page</param>
                <param name="actionName">viewTree</param>
            </result>
            <result name="configure" type="chain">
                <param name="namespace">/do/Page</param>
                <param name="actionName">configure</param>
            </result>
        </global-results>
        
        <action name="configServer" class="jpaltofwAltoWidgetAction" method="configServer">
            <result name="input" type="tiles">admin.jpaltofw.page.widget.altoWidget.config</result>
            <result type="tiles">admin.jpaltofw.page.widget.altoWidget.config</result>
            <interceptor-ref name="entandoDefaultStack"><param name="requestAuth.requiredPermission">managePages</param></interceptor-ref>
        </action>
        
        <action name="changeServer" class="jpaltofwAltoWidgetAction" method="changeServer">
            <result type="tiles">admin.jpaltofw.page.widget.altoWidget.config</result>
            <interceptor-ref name="entandoDefaultStack"><param name="requestAuth.requiredPermission">managePages</param></interceptor-ref>
        </action>
        
        <action name="save" class="jpaltofwAltoWidgetAction" method="save">
            <result name="input" type="tiles">admin.jpaltofw.page.widget.altoWidget.config</result>
            <interceptor-ref name="entandoActionLogger" />
            <interceptor-ref name="entandoValidationStack"><param name="requestAuth.requiredPermission">managePages</param></interceptor-ref>
        </action>
        
    </package>
    
</struts>